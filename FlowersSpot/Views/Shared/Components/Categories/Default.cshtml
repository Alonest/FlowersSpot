@model IEnumerable<Category>

<ul class="list-group">

<li class="list-group-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" >All Products</a>
</li>


@foreach (var item in Model)
{
    @if (item.Slug != "home")
    {
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Pages" asp-action="Page" asp-route-Categoryslug="@item.Slug">@item.Name</a>
        </li>
    }
}
</ul>

